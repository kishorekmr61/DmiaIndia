<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dmia.bioAttendance">

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />


    <application
        android:name="com.dmia.bioAttendance.application.DmiaBioApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:theme="@style/Theme.Dmia"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.dmia.bioAttendance.ui.empleyeeRegistration.EmployeeRegistrationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Dmia"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.dmia.bioAttendance.ui.loginActivity.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Dmia"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.dmia.bioAttendance.ui.AdminDashboardActivity.AdminDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Dmia"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.dmia.bioAttendance.ui.userAttendance.UserAttendanceActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Dmia"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.dmia.bioAttendance.ui.UserDashboardActivity.UserDashboardActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Dmia"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>